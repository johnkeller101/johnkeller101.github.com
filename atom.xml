---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.name | xml_escape }} - Articles</title>
    <description>{% if site.description %}{{ site.description | strip_html }}{% endif %}</description>
    <link>
    {{ site.url }}</link>
    {% for post in site.posts %}
      {% unless post.link %}
      <item>
        {% if post.cover %}
        <!-- content for the cover photo in rss feeds -->
        <media:content 
        xmlns:media="http://search.yahoo.com/mrss/" 
        url="{{ post.cover }}" 
        medium="image" 
        type="image/jpeg" 
        width="{% if post.cover_width %}{{ post.cover_width }}{% else %}1280px{% endif %}" 
        height="{% if post.cover_height %}{{ post.cover_height }}{% else %}720px{% endif %}" />
        {% endif %}
        {% if post.video-id %} 
        <!-- content for the cover thumbnail in rss feeds -->
        <media:content 
        xmlns:media="http://search.yahoo.com/mrss/" 
        url="https://img.youtube.com/vi/{{ post.video-id }}/maxresdefault.jpg" 
        medium="image" 
        type="image/jpeg" 
        width="1280px" 
        height="720px" />
        {% endif %}
        <title>{{ post.title | strip_html }}</title>
        <description>{{ post.content | strip_html }}</description>
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <link>
        {{ site.url }}{{ post.url }}</link>
        <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
      </item>
      {% endunless %}
    {% endfor %}
  </channel>
</rss>
