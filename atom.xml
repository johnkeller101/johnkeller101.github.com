---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.name | xml_escape }} - Articles</title>
    <description>{% if site.description %}{{ site.description | xml_escape }}{% endif %}</description>
    <link>
    {{ site.url }}</link>
    {% for post in site.posts %}
      {% unless post.link %}
      <image>
        <url>{% if post.video-id %}https://img.youtube.com/vi/{{ post.video-id }}/maxresdefault.jpg{% else %}{{ site.url }}{{ post.cover }}{% endif %}</url>
        <title>{{ post.title | xml_escape }}</title>
        <link>{{ site.url }}{{ post.url }}</link>
      </image>
      <item>
        {% if post.cover %}
        <media:content 
        xmlns:media="http://search.yahoo.com/mrss/" 
        url="{{ site.url }}{{ post.cover }}" 
        medium="image" 
        type="image/jpeg" 
        width="{% if post.cover_width %}{{ post.cover_width }}{% else %}1280px{% endif %}" 
        height="{% if post.cover_height %}{{ post.cover_height }}{% else %}720px{% endif %}" />
        {% endif %}
        {% if post.video-id %}
        <media:content 
        xmlns:media="http://search.yahoo.com/mrss/" 
        url="https://img.youtube.com/vi/{{ post.video-id }}/maxresdefault.jpg" 
        medium="image" 
        type="image/jpeg" 
        width="1280px" 
        height="720px" />
        {% endif %}
        <title>{{ post.title | xml_escape }}</title>
        {% if post.description %}
          <description>{{ post.description | xml_escape }}</description>
        {% else %}
          <description>{{ post.content | strip_html | replace: '\n',''}}</description>
        {% endif %}
        <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
        <link>{{ site.url }}{{ post.url }}</link>
        <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
      </item>
      {% endunless %}
    {% endfor %}
  </channel>
</rss>
